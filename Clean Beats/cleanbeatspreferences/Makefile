include $(THEOS)/makefiles/common.mk

BUNDLE_NAME = cleanbeatspreferences
cleanbeatspreferences_FILES = CBSRootListController.m
cleanbeatspreferences_INSTALL_PATH = /Library/PreferenceBundles
cleanbeatspreferences_FRAMEWORKS = UIKit
cleanbeatspreferences_PRIVATE_FRAMEWORKS = Preferences

include $(THEOS_MAKE_PATH)/bundle.mk

internal-stage::
	$(ECHO_NOTHING)mkdir -p $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences$(ECHO_END)
	$(ECHO_NOTHING)cp entry.plist $(THEOS_STAGING_DIR)/Library/PreferenceLoader/Preferences/cleanbeatspreferences.plist$(ECHO_END)
